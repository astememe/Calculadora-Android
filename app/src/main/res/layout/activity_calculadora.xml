<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.astememe.calculadorabobesponjadollar.Calculadora">

    <TableLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="50dp"
        >

        <TableRow
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/BotonBorrar"
                style="@style/BotonPersonalizado"
                android:layout_width="52dp"
                android:layout_height="52dp"
                app:icon="@drawable/baseline_arrow_back_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/md_theme_onPrimary"
                android:backgroundTint="@color/md_theme_secondary"
                app:iconSize="30dp"
                >

            </com.google.android.material.button.MaterialButton>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.button.MaterialButton
                style="@style/BotonPersonalizado"
                android:id="@+id/num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"

                />

            <com.google.android.material.button.MaterialButton
                style="@style/BotonPersonalizado"
                android:id="@+id/num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/BotonPersonalizado"
                android:id="@+id/num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/symbol_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BotonPersonalizado"
                android:text="+"
                />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/num4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BotonPersonalizado"
                android:text="4"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/num5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BotonPersonalizado"
                android:text="5"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/num6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BotonPersonalizado"
                android:text="6"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/symbol_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BotonPersonalizado"
                android:text="-"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/num7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BotonPersonalizado"
                android:text="7"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/num8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BotonPersonalizado"
                android:text="8"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/num9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BotonPersonalizado"
                android:text="9"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/symbol_multi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BotonPersonalizado"
                android:text="Ã—" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/symbol_decimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BotonPersonalizado"
                android:text="."
                >

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                style="@style/BotonPersonalizado"
                android:id="@+id/button14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BotonPersonalizado"
                android:text="%" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BotonPersonalizado"
                android:text="=" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>